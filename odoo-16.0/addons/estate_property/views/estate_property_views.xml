<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!--  Form view for Estate Property  -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <group>

                        <group>
                            <field name="name" string="Property Name" groups="base.group_user"/>
                            <field name="description" string="Description"/>
                            <field name="property_type_id" string="Property Type"/>
                            <field name="address" string="Address"/>
                            <field name="expected_price" string="Expected Price"/>
                            <field name="selling_price" string="Selling Price"/>
                            <field name="state" string="Status"/>
                        </group>
                        <group>
                            <field name="name" string="Property Name"/>
                            <field name="living_area" string="Living Area (m²)"/>
                            <field name="garden_area" string="Garden Area (m²)"/>
                            <field name="total_area" string="Total Area (m²)" readonly="1"/>
                            <field name="best_price" string="Best Offer" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>

                    <!-- Thêm một tab mới -->
                    <notebook>
                        <page string="Sales Information">
                            <group>
                                <field name="salesperson_id" string="Salesperson"/>
                                <field name="buyer_id" string="Buyer"/>
                            </group>
                        </page>
                    </notebook>

                    <group>
                        <!-- Hiển thị danh sách các đề nghị (offers) -->
                        <field name="offer_ids">
                            <tree string="Offers">
                                <field name="price" string="Offer Price"/>
                                <field name="partner_id" string="Partner"/>
                                <field name="status" string="Status"/>
                                <field name="validity"/>
                                <field name="date_deadline"/>
                            </tree>
                            <form string="Offer Form">
                                <group>
                                    <field name="price" string="Offer Price"/>
                                    <field name="partner_id" string="Partner"/>
                                    <field name="status" string="Status"/>
                                    <field name="validity"/>
                                    <field name="date_deadline" readonly="1"/>
                                </group>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for estate.property -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Properties">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="expected_price"/>
                <field name="selling_price"/>

            </tree>
        </field>
    </record>

     <!-- Action for estate.property -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_estate_property_tree"/>
        <field name="help" type="html">
            <p>
                List of estate properties.
            </p>
        </field>
    </record>

    <record id="view_estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Estate Property Types">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Estate Property Type">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action for estate.property.type -->
    <record id="action_estate_property_type" model="ir.actions.act_window">
        <field name="name">Estate Properties Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_estate_property_type_tree"/>
        <field name="help" type="html">
            <p>
                List of estate property types.
            </p>
        </field>
    </record>

    <!-- Action for estate.property.tag -->
    <record id="view_estate_property_tag_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Estate Property Types">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_tag_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Estate Property Type">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_estate_property_tag" model="ir.actions.act_window">
        <field name="name">Estate Properties Tag</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_estate_property_tag_tree"/>
        <field name="help" type="html">
            <p>
                List of estate property tags.
            </p>
        </field>
    </record>

    <!--  Search  -->
    <record id="view_property_search" model="ir.ui.view">
        <field name="name">estate.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search by Name">
                <field name="name"/>
                <field name="property_type_id"/>
            </search>
            <separator/>
            <filter string="State" name="state" domain="[('active', '=', False)]"/>
            <group expand="1" string="Group By">
                <filter string="Property Type" name="property_type" context="{'group_by':'name'}"/>
            </group>
        </field>
    </record>
</odoo>
