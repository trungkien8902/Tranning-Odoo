<odoo>

    <record id="view_partner_form_inherit_student" model="ir.ui.view">
        <field name="name">res.partner.form.student</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="after">
                <group string="Thông tin sinh viên">
                    <field name="is_student"/>
                    <field name="student_id" attrs="{'invisible': [('is_student', '=', False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_student_form_inherit_partner" model="ir.ui.view">
        <field name="name">student.form.partner</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="student_management.view_student_form"/> <!-- Thay 'module_name' bằng tên module của bạn -->
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="after">
                <button name="action_open_partner_contacts" type="object" string="Xem liên hệ"/>
            </xpath>
        </field>
    </record>

    <record id="view_partner_tree_inherit_student" model="ir.ui.view">
        <field name="name">res.partner.tree.student</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Danh Sách Liên Hệ">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="student_id" invisible="1"/>
            </tree>
        </field>
    </record>


</odoo>

