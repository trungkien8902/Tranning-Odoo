<odoo>
    <record id="view_employee_skill_update_wizard" model="ir.ui.view">
        <field name="name">skill.update.wizard.form</field>
        <field name="model">skill.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Skills from Certifications">
                <group>
                    <field name="employee_id" readonly="1"/>
                    <field name="certification_ids" readonly="1"/>
                    <field name="skill_ids"/>
                </group>
                <footer>
                    <button string="Update Skills" type="object" name="action_update_skills" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
