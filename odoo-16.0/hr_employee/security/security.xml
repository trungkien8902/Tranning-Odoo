<odoo>
    <!-- Nhóm quản lý chứng chỉ -->
    <record id="group_manage_certifications" model="res.groups">
        <field name="name">Manage Certifications</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>

    <!-- Nhóm quản lý kỹ năng -->
    <record id="group_manage_skills" model="res.groups">
        <field name="name">Manage Skills</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>

    <!-- Quy tắc bảo mật cho nhóm quản lý chứng chỉ -->
    <record id="rule_manage_certifications" model="ir.rule">
        <field name="name">Manage Certifications Rule</field>
        <field name="model_id" ref="model_employee_certification"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr_employee.group_manage_certifications'))]"/>
    </record>

    <!-- Quy tắc bảo mật cho nhóm quản lý kỹ năng -->
    <record id="rule_manage_skills" model="ir.rule">
        <field name="name">Manage Skills Rule</field>
        <field name="model_id" ref="model_employee_skill"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr_employee.group_manage_skills'))]"/>
    </record>

</odoo>
