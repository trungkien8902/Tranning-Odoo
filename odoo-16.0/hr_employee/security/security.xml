<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_manage_certifications" model="res.groups">
        <field name="name">Manage Certifications</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>

    <record id="rule_manage_certifications" model="ir.rule">
        <field name="name">Manage Certifications Rule</field>
        <field name="model_id" ref="model_employee_certification"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr_employee.group_manage_certifications'))]"/>
    </record>

    <record id="group_manage_skills" model="res.groups">
        <field name="name">Manage Skills</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
    </record>

    <record id="rule_manage_skills" model="ir.rule">
        <field name="name">Manage Skills Rule</field>
        <field name="model_id" ref="model_employee_skill"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr_employee.group_manage_skills'))]"/>
    </record>

    <record id="group_employee_experience_manager_advanced" model="res.groups">
        <field name="name">Advanced Employee Experience Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/> <!-- Sử dụng danh mục hợp lệ -->
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_manager'))]"/>  <!-- Kế thừa quyền hr_manager -->
    </record>

    <record id="rule_employee_experience_manager_advanced" model="ir.rule">
        <field name="name">Access for Employees with 3+ Years Experience and Manage Skill</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[('years_of_experience', '>', 3), ('skill_ids.name', 'ilike', 'manage')]</field>
        <field name="groups" eval="[(4, ref('hr_employee.group_employee_experience_manager_advanced'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>
